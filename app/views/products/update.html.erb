<div class="container">
  <div class="row">
    <h1>Update Product</h1>
  </div>
  <%= @parameters %>
  <div class="row">
    <div class="col">
      <%= form_tag(model: @product, id: @id) do %>
        <div class="form-group">
          <%= label_tag(:brand, "Product Brand:") %>
          <%= select_tag 'brand', options_from_collection_for_select(@brands, "id", "name", @brand), class:'form-control' %>
          <div class="spacer15"></div>
          <%= label_tag(:name, "Product Name:") %>
          <%= text_field_tag 'name', @name, class:'form-control', placeholder: 'Type product\'s name' %>
          <div class="spacer15"></div>
          <%= label_tag(:description, "Product Description:") %>
          <%= text_area_tag 'description', @description, class:'form-control', placeholder: 'Type product\'s description' %>
          <div class="spacer15"></div>
          <%= button_tag 'Save Product', class:'btn btn-primary' %>
          <a class="btn btn-warning" href="<%= url_for("/products/index") %>">Cancel</a>
        </div>
      <% end %>
    </div>
  </div>
</div>